<div id="<%= dom_id todo %>" data-controller="todo" data-todo-update-url="<%= todo_path(todo) %>">
  <p>
    <strong>Title:</strong>
    <%= todo.title %>
  </p>

  <p>
    <strong>Completed:</strong>
    <%= todo.completed %>
  </p>

  <input type="checkbox" data-action="todo#toggle" data-target="todo.completed" <% if todo.completed %> checked <% end %> >
</div>
